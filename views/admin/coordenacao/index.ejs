<%- include('../../partials/header.ejs') -%>
    <%- include('../../partials/navbaradmin.ejs') -%>

            <div class="container">
                <br>
                <h2>Coordenações Cadastradas:</h2>
                <hr>
                <a class="btn btn-success" href="/admin/coordenacao/create">Cadastrar Coordenação</a>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coordenacoes.forEach(coordenacao=> { %>
                            <tr>
                                <th> <%= coordenacao.id %></th>
                                <th> <%= coordenacao.nome %></th>
                                <th>
                                    <a class=" btn btn-warning" href="/admin/coordenacao/edit/<%= coordenacao.id%>">Editar</a>
                                </th>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        <%- include('../../partials/footer.ejs') -%>


        <script>
            function confirmarDelecao(event, form) {
                event.preventDefault();
                var decision = confirm("Você deseja deletar o registro?");
                if (decision) { form.submit(); }
            }
        </script>