<%- include('../../partials/header.ejs') -%>
    <%- include('../../partials/navbaradmin.ejs') -%>

            <div class="container">
                <br>
                <h2>Projetos de Pesquisa Cadastrados:</h2>
                <hr>
                <a class="btn btn-success" href="/admin/pesquisa/create">Cadastrar Proj. Pesquisa</a>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Ano Inicial</th>
                            <th>Ano Final</th>
                            <th>C.H.</th>
                            <th>Renovação</th>
                            <th>Coordenador</th>
                            <th>Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pesquisas.forEach(pesquisa => { %>
                            <tr>
                                <th> <%= pesquisa.id %></th>
                                <th> <%= pesquisa.titulo %></th>
                                <th> <%= pesquisa.anoinicio %></th>
                                <th> <%= pesquisa.anofim %></th>
                                <th> <%= pesquisa.cargahoraria %></th>
                                <th> <%= pesquisa.prorrogado %></th>
                                <th> <%= pesquisa.docente.nome %></th>
                                <th>
                                    <a class=" btn btn-warning" href="/admin/pesquisa/edit/<%= pesquisa.id %>">Editar</a>
                                </th>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        <%- include('../../partials/footer.ejs') -%>

        <script>
            function confirmarDelecao(event, form) {
                event.preventDefault();
                var decision = confirm("Você deseja deletar o registro?");
                if (decision) { form.submit(); }
            }
        </script>